<h2 class="text-center mt-4"><%= @article.title %></h2>
<br>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8">
     <div class="card text-center shadow-lg mb-5 bg-white rounded border border-dark rounded">
        <div id = "index_card_header" class="card-header font-italic bg-dark">
          By <%=@article.user.username %>
        </div>
        <div id ="index_card_body" class="card-body">
          <p class="card-text"><%= simple_format(@article.description) %></p>
          <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
            <%= link_to "Edit", edit_article_path(@article), class:"btn btn btn-outline-warning" %>
            <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure" }, class:"btn btn-outline-danger" %>
          <% end %>
        </div>
        <div id="index_card_footer" class="card-footer text-muted bg-dark">
          <small>
            created <%= time_ago_in_words(@article.created_at) %> ago,
            edited <%= time_ago_in_words(@article.updated_at) %> ago
          </small>
        </div>
      </div>
      <%= link_to "[ Return to article Listings ]", articles_path, class:"row justify-content-center text-dark font-weight-bold" %>
    </div>
  </div>
</div>
